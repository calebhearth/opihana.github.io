<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text" xml:lang="en">{{ site.title }}</title>
  <link rel="self" type="application/atom+xml" href="{{ site.base_url }}atom.xml" />
  <link rel="alternate" type="text/html" href="{{ site.base_url }}"/>
  <updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
  <author>
    <name>Hannah Hearth</name>
  </author>
  <id>{{ site.base_url }}</id>
  <rights>Â© {{ site.time | date: "%Y" }}, Hannah Hearth; All Rights Reserved.</rights>
  {% for post in site.posts %}
  <entry>
    <title type="text" xml:lang="en">{{ post.title | xml_escape }}</title>
    <id>{{ site.base_url }}{{ post.url }}</id>
    {% if post.external %}
    <link rel="alternate" type="text/html" href="{{ post.external }}"/>
    {% else %}
    <link rel="alternate" type="text/html" href="{{ site.base_url }}{{ post.url }}"/>
    {% endif %}
    {% if post.date_updated %}
    <updated>{{ post.date_updated | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
    {% else %}
    <updated>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
    {% endif %}
    <published>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</published>
    <summary type="text" xml:lang="en">{{ post.excerpt | strip_html | xml_escape }}</summary>
    {% for category in post.categories %}
    <category term="{{ category | downcase }}" />
    {% endfor %}
    <content type="html" xml:lang="en" xml:base="{{ site.base_url }}">
        {{ post.content | xml_escape }}
    </content>
  </entry>
  {% endfor %}
</feed>
